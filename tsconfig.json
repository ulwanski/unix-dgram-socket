{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES5",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "newLine": "lf",
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    "alwaysStrict": true,
    "removeComments": true,
    "importHelpers": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "src/**/example*"
  ],
  "compileOnSave": true
}
